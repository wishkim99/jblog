<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="post">

	<select id="findAll"  resultType="postvo">
				<![CDATA[
				   select title, logo, user_id from post 
				]]>
	</select>

		<select id="findById" parameterType="long" resultType="postvo">
		<![CDATA[
		  select title, logo from post where user_id=#{user_id}
		]]>
	</select>
	
		<insert id="insert" parameterType="postvo">
		<![CDATA[
		insert 
		   into user
		values (null, #{title }, #{contents}, #{password }, now(), #{category_no})
		]]>
	</insert>
	
</mapper>